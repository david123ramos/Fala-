<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.chat.First2Fragment">

    <LinearLayout
        android:id="@+id/chatcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:orientation="horizontal"
        />
    <ListView
        android:id="@+id/list_view"
        android:layout_width="410dp"
        android:layout_height="515dp"
        android:layout_marginTop="100dp"
        android:divider="@android:color/transparent"
        android:scrollbars="none"
        android:dividerHeight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/chatcontainer" />

    <EditText
        android:id="@+id/msg_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="70dp"
        android:hint="@string/sendmsg"
        android:paddingLeft="15dp"
        android:background="@drawable/fullborderinput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatcontainer"
        />

    <Button
        android:id="@+id/btn_send_message"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/roundedbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chatcontainer" />


</androidx.constraintlayout.widget.ConstraintLayout>